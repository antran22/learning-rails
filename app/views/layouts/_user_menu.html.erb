<div class="dropdown dropdown-end">
  <label tabindex="0" class="btn btn-ghost btn-circle avatar overflow-hidden">
    <%#= image_tag Current.user.avatar || 'default_avatar.png', alt: 'User Avatar' %>
    <%= gravatar_for Current.user, class: "size-full" %>
  </label>
  <ul tabindex="0" class="mt-3 p-2 shadow menu menu-compact dropdown-content bg-base-100 rounded-box w-52">
    <li>
      <%= button_to logout_url,
                    method: :delete,
                    class: "w-full h-full px-4 py-2 flex justify-start items-center gap-2",
                    form_class: "p-0 block" do %>
        <iconify-icon icon="ph:sign-in" class="size-6" width="100%" height="100%"></iconify-icon>
        <span>Sign out</span>
      <% end %>
    </li>
  </ul>
</div>
