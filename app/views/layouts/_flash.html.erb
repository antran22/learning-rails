<% if (alert = flash[:alert]) %>
  <p class="py-2 px-3 bg-error mb-5 text-error-content font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
<% end %>

<% if (notice = flash[:notice]) %>
  <p class="py-2 px-3 bg-success mb-5 text-error-content font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
<% end %>
