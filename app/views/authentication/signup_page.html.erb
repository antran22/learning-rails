<h1 class="font-bold text-4xl">Sign up</h1>
<%= form_with model: @user, url: signup_path, class: "contents" do |form| %>
  <div class="my-5">
    <%= form.text_field :name,
                        required: true,
                        autofocus: true,
                        autocomplete: "name",
                        placeholder: "Your name",
                        value: params[:name],
                        class: "input input-md input-bordered w-full"
    %>
  </div>
  <div class="my-5">
    <%= form.email_field :email_address,
                         required: true,
                         autofocus: true,
                         autocomplete: "username",
                         placeholder: "Enter your email address",
                         value: params[:email_address],
                         class: "input input-md input-bordered w-full"
    %>
  </div>
  <div class="my-5">
    <%= form.password_field :password,
                            required: true,
                            autocomplete: "current-password",
                            placeholder: "Enter your password",
                            maxlength: 72,
                            class: "input input-md input-bordered w-full" %>
  </div>
  <div class="my-5">
    <%= form.password_field :password_confirmation,
                            required: true,
                            autocomplete: "current-password",
                            placeholder: "Confirm your password",
                            maxlength: 72,
                            class: "input input-md input-bordered w-full" %>
  </div>
  <div class="flex flex-col sm:items-center sm:gap-4">
    <div class="inline">
      <%= form.submit "Sign up", class: "btn btn-primary" %>
    </div>

    <span class="text-sm">
      Already got an account?
      <%= link_to "Login", login_url, class: "text-primary underline" %>
    </span>

    <%= link_to "Forgot password?", new_password_path, class: "text-neutral underline text-sm" %>
  </div>
<% end %>